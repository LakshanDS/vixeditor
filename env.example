# --- Admin ---
# Used to protect the /admin/create-key endpoint
MASTER_KEY="Your Master key"
MASTER_IP="127.0.0.1" # Optional: Restrict access to a specific IP

# --- Google Fonts ---
# Your Google Fonts API key for fetching the font list
GOOGLE_FONTS_API_KEY="your Google Fonts API key"

# --- App Settings ---
DATABASE_URL="sqlite:///./database/catvideo.db"

# --- Directory Paths ---
STYLES_DIR="source/videos/styles"
AUDIO_DIR="source/audio"
FONTS_DIR="source/fonts"
LOGO_DIR="source/logo"
OUTPUTS_DIR="outputs" # Where the final videos will be saved
VIDEOS_DIR="source/videos" # The parent directory for all videos

# --- Cleanup Settings ---
OUTPUT_RETENTION_HOURS=24 # Delete output files older than this many hours
CLEANUP_INTERVAL_MINUTES=60 # Run cleanup check every this many minutes